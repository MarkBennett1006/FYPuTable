<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.LinearLayoutCompat xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".PublishAnnounce"
    android:orientation="vertical">


    <Spinner
        android:id="@+id/spAnnouncementModules"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_weight="1"
        android:textAlignment="center"
        android:textAppearance="@style/TextAppearance.AppCompat.Large"
        android:spinnerMode="dropdown"/>


    <View
        android:layout_width="wrap_content"
        android:layout_height="1dp"
        android:background="#000000"
        android:padding="20dp"
        android:layout_weight="0.01"/>


    <EditText
        android:id="@+id/crMsgTitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"

        android:textAppearance="@style/TextAppearance.AppCompat.Large"
        android:hint="Announcement Title"/>

    <EditText
        android:id="@+id/crMsgContent"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="10"
        android:gravity="fill_horizontal"
        android:textAppearance="@style/TextAppearance.AppCompat.Large"
        android:hint="Message Content"
        />


    <Button
        android:id="@+id/btnPublish"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:text="Publish announcement"
        />

    <android.support.design.widget.BottomNavigationView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:menu="@menu/bottom"/>


</android.support.v7.widget.LinearLayoutCompat>